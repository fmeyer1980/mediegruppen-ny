<div class="item">
    <div class="image-wrapper">
        <img class="image" loading="lazy"
            srcset="
            {{ settings.claudinaryUrl }}f_auto,q_70,w_280,h_210,c_fill{{ settings.claudinaryFolder }}{{ item.data.prifile_image }} 1x,
            {{ settings.claudinaryUrl }}f_auto,q_70,w_560,h_420,c_fill{{ settings.claudinaryFolder }}{{ item.data.prifile_image }} 2x"
        alt="{{ item.title }}">
    </div>
    <div class="content">
        <h5 class="heading">{{ item.data.title }}</h5>
        {% if item.data.position %}
            <p class="position">{{ item.data.position }}</p>
        {% endif %}
    </div>
    <ul class="contact-info">
        {% if item.data.phone %}
            <li><a class="link" href="">{{ '/src/assets/images/phone-icon.svg' | svgContents | safe }} {{ item.data.phone }}</a></li>
        {% endif %}
        {% if item.data.mobil %}
            <li><a class="link" href="">{{ '/src/assets/images/mobil-phone-icon.svg' | svgContents | safe }} {{ item.data.mobil }}</a></li>
        {% endif %}
        {% if item.data.mail %}
        <li><a class="link" href="">{{ '/src/assets/images/mail-icon.svg' | svgContents | safe }} {{ item.data.mail }}</a></li>
        {% endif %}
    </ul>
</div>