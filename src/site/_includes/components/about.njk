<section class="about">
    <div class="top">
        <h1 class="heading">{{ about.heading }}</h1>
        <p class="text">{{ about.excerpt | safe }}</p>
    </div>
    <div class="bottom">
        {% for item in about.fokus %}
        <a class="item" href="/dna">
            <img class="image" height="180" width="180" importance="high"
                srcset="
                {{ settings.claudinaryUrl }}f_auto,q_70,w_180,h_180,c_fill{{ settings.claudinaryFolder }}{{ item.image }} 1x,
                {{ settings.claudinaryUrl }}f_auto,q_70,w_300,h_300,c_fill{{ settings.claudinaryFolder }}{{ item.image }} 2x"
            alt="{{ item.heading }}">
            <h3 class="heading h5">{{ item.heading }}</h3>
            <p class="text">{{ item.text }}</p>
        </a>
        {% endfor %}
    </div>
</section>